{
  "name": "blog-platform-ssr",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch --ignore \"vite.config.ts.timestamp-*\" server/index.ts",
    "dev:db": "tsx server/scripts/run-migrations.ts",
    "build": "npm run build:server && npm run build:client && npm run build:ssr",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "build:ssr": "vite build --ssr src/entries/server.tsx",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rimraf dist coverage .cache .eslintcache"
  },
  "dependencies": {
    "@ant-design/icons": "^6.1.0",
    "antd": "^6.0.1",
    "compression": "^1.7.4",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ioredis": "^5.8.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "path-to-regexp": "^6.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "redis": "^5.10.0",
    "serialize-javascript": "^6.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.14.14",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/serialize-javascript": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.8",
    "globals": "^16.5.0",
    "globby": "^14.0.2",
    "jiti": "^2.6.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^5.4.8",
    "vitest": "^2.1.4"
  }
}
