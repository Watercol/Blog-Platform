{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@server/*": ["server/*"],
      "@src/*": ["src/*"]
    },
    "types": ["node"]
  },
  "include": ["server", "src", "shared", "vite.config.ts", "vitest.config.ts", "vitest.setup.ts"],
  "exclude": ["dist", "node_modules"]
}
